{
  "name": "Moist",
  "version": "1.0.0",
  "description": "Reminds you to drink water!",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder -w --publish always"
  },
  "author": "TrygveDev",
  "license": "MIT",
  "devDependencies": {
    "electron": "^20.1.3",
    "electron-builder": "^23.3.3"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^5.2.1",
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "Moist",
    "artifactName": "Moist-v${version}.${ext}",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./app/images/icon.ico",
      "publish": [
        {
          "provider": "github",
          "owner": "trygvedev",
          "repo": "Moist"
        }
      ]
    },
    "nsis": {
      "installerIcon": "./app/images/icon.ico",
      "uninstallerIcon": "./app/images/icon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
